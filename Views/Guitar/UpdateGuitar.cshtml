@model Guitar

<h2>Update @Model.GuitarID</h2>

@using (Html.BeginForm("UpdateGuitarToDatabase", "Guitar", "Post"))
{
    <input asp-for="GuitarID" type="hidden" value="@Model.GuitarID" />

    <label asp-for="Brand" class="control-label">Brand</label>
    <input type="text" name="Brand" class="form-control" value="@Model.Brand" />

    <label asp-for="Model" class="control-label">Model</label>
    <input type="text" name="Model" class="form-control" value="@Model.Model" />

    <label asp-for="GuitarType" class="control-label">Guitar Type</label>
    <input type="text" name="GuitarType" class="form-control" value="@Model.GuitarType" />

    <label asp-for="OnSale" class="control-label">On Sale</label>
    <select asp-for="OnSale" id="dropdown">
        <option value="true">true</option>
        <option value="false">false</option>
    </select>
    <br />

    <label asp-for="ForSkillLevel" class="control-label">Recommended Skill Level</label>
    <input type="text" name="ForSkillLevel" class="form-control" value="@Model.ForSkillLevel" />

    

    

    <label asp-for="Price" class="control-label">Price</label>
    <input type="number" step="0.01" name="Price" class="form-control" value="@Model.Price" />

    <input type="submit" value="Update Guitar" class="btn btn-primary" />
}
