@model Guitar

<h2>Guitars</h2>
<table class="table">
	<tr>
		<th>Guitar ID</th>
		<th>Brand</th>
		<th>Model</th>
		<th>Guitar Type</th>
		<th>Price</th>
		<th>On Sale</th>
		<th>Best Suitable For</th>
	</tr>

	<tr>
		<td>@Model.GuitarID</td>
		<td>@Model.Brand</td>
		<td>@Model.Model</td>
		<td>@Model.GuitarType</td>
		<td>@Model.Price</td>
		<td>@Model.OnSale</td>
		<td>@Model.ForSkillLevel</td>
	</tr>

</table>


<br>
<br>

<div style="display: block">
	<a class="btn btn-warning" href="/Guitar/UpdateGuitar/@Model.GuitarID"><i class="bi bi-file-arrow-up"></i>Update this guitar</a>
	
</div>

